<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="codepath.apps.simpletodo.EditItemActivity"
	tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/tvEditItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Edit Item Below:"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:id="@+id/etItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvEditItem"
        android:layout_below="@+id/tvEditItem"
        android:layout_marginTop="86dp"
        android:ems="10" >
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/btSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etItem"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:onClick="saveEditedItem"
        android:text="Save" />
</RelativeLayout>
